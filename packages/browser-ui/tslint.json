{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "*.json",
      "**/*.json"
    ]
  },
  "rules": {
    "curly": [
      true,
      "ignore-same-line"
    ],
    "no-console": false,
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-var-requires": false,
    "array-type": false,
    "one-variable-per-declaration": false,
    "variable-name": {
      "options": [
        "allow-snake-case",
        "allow-pascal-case"
      ]
    },
    "member-ordering": false
  }
}