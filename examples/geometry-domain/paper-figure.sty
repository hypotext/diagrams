Colors {
    Colors.black = rgba(0.0, 0.0, 0.0, 1.0)
    Colors.verylightpurple = rgba(0.953, 0.957, 0.977, 1.0)
    Colors.purple2 = rgba(0.106, 0.122, 0.54, 0.2)
}

G {
    G.dim = 349.0 
    -- 100 Penrose px -> 69.6 points in illustrator/pdf
    -- Dimensions in paper: teaser is 510 x 243 pts
    -- Dimensions in paper: column is 243 pts
    -- 243 points -> 349 Penrose px
    -- 510 points -> 733 Penrose px

    G.plane = Rectangle {
    	    angle : 0.0
	    color : Colors.purple2
	    strokeColor : Colors.black
	    -- Note: stroke width is added to the outside
	    strokeWidth : 0.0 
	    x : 0.0
	    y : 0.0
	    w : G.dim
	    h : G.dim
    }

    G.text = Text {
    	 x : 0.0
	 y : 0.0
	 string : "\\frac{1}{e^x} \\int_0^\\infty x^2 dx  \\text{ this is 9pt (Penrose) text in a 349px canvas}"
	 -- string : "x^2"
	 rotation : 0.0
	 color : Colors.black
	 fontSize : "9pt"
    }

    G.layering = G.text above G.plane
}
